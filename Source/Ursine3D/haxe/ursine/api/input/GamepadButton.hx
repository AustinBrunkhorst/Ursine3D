    public static inline var SHOULDER_RIGHT    = 10;
    public static inline var BACK              = 4;
    public static inline var START             = 6;
    public static inline var GUIDE             = 5;
    public static inline var MAX               = 15;
    public static inline var TRIGGER_LEFT      = 16;
    public static inline var TRIGGER_RIGHT     = 17;
    public static inline var STICK_LEFT_UP     = 18;
    public static inline var STICK_LEFT_DOWN   = 19;
